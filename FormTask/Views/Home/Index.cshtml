@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form action="Home/Verification" method="post" class="bg-dark text-white px-5">
    <div class="form-group pt-5 px-5">
        <label for="Email">Email address</label>
        <input type="email" class="form-control" name="Email" placeholder="Enter email" required>
    </div>
    <div class="form-group pt-2 px-5">
        <label for="Password">Password</label>
        <input type="password" class="form-control" name="Password" placeholder="Password" required>
    </div>
    <div class="form-group pt-2 px-5">
        <label for="Number">Number</label>
        <input type="tel" class="form-control" name="Number" placeholder="Number" required>
    </div>
    <br>
    <div class="form-group px-5">
        <input type="submit" value="Submit" class="btn btn-success">
        <br />
    </div>
    
</form>

